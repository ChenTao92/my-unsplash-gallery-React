body
  font-size: 18px

.gallery
  width: 80%
  max-width: 1176px
  margin: auto
  > h1
    text-align: center
    font-family: Comic Sans MS
    font-size: 3rem

  .control
    margin-bottom: 20px
    text-align: center
    > svg
      width: 20px
      fill: gray
      margin: 0 10px
      cursor: pointer
      transition: fill 0.5s
      &:hover
        fill: black
      &.active
        fill: black

.photo
  width: 100%

.layout-list
  .photo
    margin-bottom: 20px
    border-radius: 20px

.layout-grid
  display: flex
  align-items: flex-start
  flex-wrap: wrap
  margin: 20px 0
  justify-content: space-between
  .photo
    width: 375.95px
    margin: 20px 0
    border-radius: 10px


